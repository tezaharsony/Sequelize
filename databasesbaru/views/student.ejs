<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style>
    table {
      font-family:Comic Extrabold, sans-serif;
      position: center;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 1px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <%- include layouts/pagetitlestudent %>
  </head>

  <body>
  <center><h3>Students data</h3><center><br>
    <a href="/student/add"><button type="Submit" name="Add">Add New Student</button></a>
    <br><br>
    <form action="/student" method="POST">
  <br><br>
  <center>
  <table>
    <tr>
      <th>id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan='2'></th>
    </tr>
    <% var sum=1;%>
    <% dataStudent.forEach(student =>{%>
    <tr>
      <td><%= sum++ %></td>
      <td><%= student.id %></td>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
    <td><a href="/student/addsubject/<%= student.id %>"><button type="button" name="Edit">ADD SUBJECT</button></a></td>
    <td><a href="/student/delete/<%= student.id %>"><button type="button" name="Delete">DELETE</button></a></td>
    <td><a href="/student/edit/<%= student.id %>"><button type="button" name="Edit">EDIT</button></a></td>
    </tr>
      <%})%>
    </table>
  </center>
  </body>
</html>
